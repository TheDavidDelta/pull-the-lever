{
    "manifest_version": 2,
    "name": "Pull The Lever!",
    "description": "Extension for saving all your currently open tabs",
    "version": "1.0",
    "background": {
        "scripts": ["out/background.js"]
    },
    "browser_action": {
        "default_title": "Pull the Lever!",
        "default_icon": {
            "128": "img/button_save.png"
        }
    },
    "permissions": [
        "tabs",
        "storage"
    ],
    "applications": {
        "gecko": {
            "id": "pull-the-lever@thedaviddelta.com"
        }
    }
}
